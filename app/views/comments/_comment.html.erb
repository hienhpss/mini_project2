<div id="comment">
<div class="comment_content">
	<p class="comment_name"><%= comment.name %></p>
	<p><%= comment.body %></p>
	<p><%= time_ago_in_words(comment.created_at) %> ago</p>
</div>
<p><%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, class: "button", data: { confirm: 'Are you sure?' } %></p>
</div>